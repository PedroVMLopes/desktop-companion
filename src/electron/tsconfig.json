{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "../../src",
        "outDir": "../../dist-electron",
        "skipLibCheck": true,
        "noEmit": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowJs": true,
    },
    "include": ["./**/*.ts", "./**/*.js"],
    "exclude": ["node_modules"]
}